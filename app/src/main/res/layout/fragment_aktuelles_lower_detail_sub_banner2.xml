<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".Fragments.AktuellesLowerFragment">
<ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TableRow
                android:paddingRight="20dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            <ImageView
                    android:id="@+id/iv_subbanner1"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/subbanner" />

            <TextView
                    android:id="@+id/tv_subbanner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lädt..."
                    android:ems="15"
                    android:inputType="textMultiLine"/>
            </LinearLayout>
        </TableRow>
        <TableRow
                android:paddingRight="20dp"
                android:paddingTop="10dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            <ImageView
                    android:id="@+id/iv_subbanner2"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:srcCompat="@drawable/subbanner" />

            <TextView
                    android:id="@+id/tv_subbanner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lädt..."
                    android:ems="15"
                    android:inputType="textMultiLine"/>
            </LinearLayout>
        </TableRow>
        <TableRow>
            <TextView
            android:id="@+id/tv_subbanner_content"
            android:text="Lädt..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ems="30"
            android:inputType="textMultiLine"/>
        </TableRow>
    </TableLayout>
</ScrollView>
</FrameLayout>