<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".Fragments.ProfilUpperFragment"
>
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="247dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/bg_children_scaled"
    app:layout_constraintBottom_toBottomOf="@id/frag_profil_upper_lin_layout"/>
    <LinearLayout
            android:id="@+id/frag_profil_upper_lin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="3dp"
            android:background="@drawable/bg_children_scaled"
            >
        <ImageView
                android:id="@+id/profil_frag_photo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/fragezeichen"
                android:padding="1dp"
                android:layout_gravity="center"/>
        <!--android:background="@drawable/custom_shape"-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
            <TextView
                    android:id="@+id/profil_frag_vorname"
                    android:text="vorname"
                    android:textSize="22dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
            />
            <TextView
                    android:id="@+id/profil_frag_nachname"
                    android:text="nachname"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="22dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
            />
        </LinearLayout>
        <TextView
                android:id="@+id/profil_frag_sportart"
                android:text="sportarten"
                android:textSize="22dp"
                android:typeface="serif"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textStyle="bold"
        />
        <TextView
                android:id="@+id/profil_frag_rang"
                android:text="rang"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="22dp"
                android:gravity="center"
                android:textStyle="bold"
        />
    </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>