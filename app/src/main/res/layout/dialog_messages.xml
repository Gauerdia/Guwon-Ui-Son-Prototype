<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_messages"
            android:text="Nachrichten"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="22dp"
            android:gravity="center"/>
<ScrollView
        android:id="@+id/scrollview_messages"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/tv_messages">
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_messages"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_messages"/>
</ScrollView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/scrollview_messages">
        <Button
                android:id="@+id/dialogCancelBtn"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SchlieÃŸen"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
