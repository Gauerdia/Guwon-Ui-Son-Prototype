<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".Fragments.QuizFragenFragment">
<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <TextView
            android:id="@+id/quiz_frage"
            android:text="Frage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/quiz_frage"
    />
    <TextView
            android:id="@+id/quiz_antwort_a"
            android:text="Antwort A"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@id/quiz_frage"
            android:gravity="center"
            android:onClick="AntwortAPressed"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/quiz_antwort_a"
    />
    <TextView
            android:id="@+id/quiz_antwort_b"
            android:text="Antwort B"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@id/quiz_antwort_a"
            android:gravity="center"
            android:onClick="AntwortBPressed"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/quiz_antwort_b"
    />
    <TextView
            android:id="@+id/quiz_antwort_c"
            android:text="Antwort C"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@id/quiz_antwort_b"
            android:gravity="center"
            android:onClick="AntwortCPressed"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/quiz_antwort_c"
    />
</android.support.constraint.ConstraintLayout>
</FrameLayout>