<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    /* static TextViews */
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_messages_detail_betreff"
            android:text="Betreff"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="22dp"
            android:gravity="center"/>
    <TextView
            android:text="Vorname:"
            android:id="@+id/tv_messages_detail_vorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_messages_detail_betreff"/>
    <TextView
            android:text="Nachname:"
            android:id="@+id/tv_messages_detail_nachname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_messages_detail_vorname"/>
    <TextView
            android:text="Nachricht:"
            android:id="@+id/tv_messages_detail_nachricht"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_messages_detail_nachname"/>
    <TextView
            android:text="Beantwortet von "
            android:id="@+id/tv_messages_detail_beantwortet_von"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@+id/tv_messages_detail_space"/>
    /* dynamic Textviews */
    <TextView
            android:text="vorname"
            android:id="@+id/tv_messages_detail_vorname_dyn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_messages_detail_vorname"
            app:layout_constraintTop_toBottomOf="@+id/tv_messages_detail_betreff"/>
    <TextView
            android:text="nachname"
            android:id="@+id/tv_messages_detail_nachname_dyn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_messages_detail_nachname"
            app:layout_constraintTop_toBottomOf="@+id/tv_messages_detail_vorname"/>
    <TextView
            android:text="text"
            android:id="@+id/tv_messages_detail_nachricht_dyn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_messages_detail_nachricht"
            app:layout_constraintTop_toBottomOf="@+id/tv_messages_detail_nachname"
            android:ems="10"
            android:inputType="textMultiLine"/>
    <TextView
            android:text=""
            android:id="@+id/tv_messages_detail_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_messages_detail_nachricht_dyn"
            android:ems="10"
            android:inputType="textMultiLine"/>
    <TextView
            android:text="niemand"
            android:id="@+id/tv_messages_detail_beantwortet_von_dyn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_messages_detail_space"
            app:layout_constraintLeft_toRightOf="@id/tv_messages_detail_beantwortet_von"
            android:ems="10"
            android:textStyle="italic"
            android:inputType="textMultiLine"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_messages_detail_beantwortet_von">
        <Button
                android:id="@+id/dialogSendBtn"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Antworten"/>
        <Button
                android:id="@+id/dialogCancelBtn"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SchlieÃŸen"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
