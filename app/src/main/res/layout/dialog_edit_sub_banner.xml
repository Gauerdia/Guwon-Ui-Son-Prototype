<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:text="Sub-Banner-Auswahl:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Spinner
                android:id="@+id/dialogSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>
    <TextView
            android:text="Ganzer Text:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/dialogEditText_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ein ausführlicher Text"
            android:ems="15"
            android:inputType="textMultiLine"/>
    <TextView
            android:text="Headline:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/dialogEditText_banner_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Eine kurze Headline"
            android:ems="15"
            android:inputType="textMultiLine"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
        <Button
                android:id="@+id/dialogSendBtn"
                android:text="Senden"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/dialogUpdateBannerBtn"
                android:text="Bild ändern"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/dialogCancelBtn"
                android:text="Abbrechen"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>